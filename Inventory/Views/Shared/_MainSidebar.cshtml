@using Inventory.MainMenu;
<!-- Main Sidebar Container -->
@* <aside class="main-sidebar sidebar-dark-primary elevation-4"> *@

<aside class="main-sidebar sidebar-dark-primary layout-fixed">

    <!-- Brand Logo -->
    <a href="~/" class="brand-link">
        <img src="~/dist/img/logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light"><b>Inven</b>Tory</span>
    </a>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/image/ProfilePicture.jpg" class="img-circle elevation-2" alt="User Image">
            </div>

            <div class="info">
                <a href="#" class="d-block">Sadia Shahabuddin</a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fas fa-search fa-fw"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                @if (User.Identity.IsAuthenticated && (User.IsInRole(SD.Role_Admin) || User.IsInRole(SD.Role_Branch_Manager)))
                {
                    <li class="nav-item">
                        <a href="@MainMenu.Dashboard.Path" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                DASHBOARD

                            </p>
                        </a>
                    </li>
                }

                <li class="nav-item @Html.IsInventorySelected()">
                    <a href="#" class="nav-link ">
                        <p>
                            INVENTORY
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>

                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="@MainMenu.Product.Path" class="nav-link @Html.IsSelected(controller: MainMenu.Product.ControllerName, action: MainMenu.Product.ActionName)">
                                <i class="nav-icon fas fa-tag"></i>
                                <p>
                                    @MainMenu.Product.PageName
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            @{
                                if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a href="@MainMenu.ProductType.Path" class="nav-link @Html.IsSelected(controller: MainMenu.ProductType.ControllerName, action: MainMenu.ProductType.ActionName)">
                                        <i class="nav-icon fas fa-tag"></i>
                                        <p>
                                            @MainMenu.ProductType.PageName
                                        </p>
                                    </a>
                                }
                            }
                        </li>

                        <li class="nav-item">

                            <a href="@MainMenu.Stock.Path" class="nav-link @Html.IsSelected(controller: MainMenu.Stock.ControllerName, action: MainMenu.Stock.ActionName)">
                                <i class="nav-icon fas fa-tag"></i>
                                <p>
                                    @MainMenu.Stock.PageName
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            @{
                                if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a href="@MainMenu.UnitOfMeasure.Path" class="nav-link @Html.IsSelected(controller: MainMenu.UnitOfMeasure.ControllerName, action: MainMenu.UnitOfMeasure.ActionName)">
                                        <i class="nav-icon fas fa-tag"></i>
                                        <p>
                                            @MainMenu.UnitOfMeasure.PageName
                                        </p>
                                    </a>
                                }
                            }
                        </li>
                    </ul>

                </li>

                <li class="nav-item @Html.IsPurchaseSelected()">
                    <a href="#" class="nav-link">
                        <p>
                            PURCHASE
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>

                    <ul class="nav nav-treeview">

                        <li class="nav-item">
                            @{
                                if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                    <a href="@MainMenu.PurchaseType.Path" class="nav-link @Html.IsSelected(controller: MainMenu.PurchaseType.ControllerName, action: MainMenu.PurchaseType.ActionName)">
                                        <i class="nav-icon fas fa-tag"></i>
                                        <p>
                                            @MainMenu.PurchaseType.PageName
