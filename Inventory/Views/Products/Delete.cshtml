@model Inventory.Models.Product

@{
    ViewData["Title"] = "Delete";
    List<Brand> brands = (List<Brand>)ViewBag.BrandId;
    List<SubCategory> subcategory = (List<SubCategory>)ViewBag.SubCategoryId;
    List<Category> category = (List<Category>)ViewBag.CategoryId;
    var base64 = Convert.ToBase64String(Model.Image);
    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
}
<div class="card card-default color-palette-box">
    <div class="card-body">
<h2 class="text-primary">Delete Product</h2>
<h3 style="color: red;">Are you sure you want to delete this?</h3>

<div>
    <hr />
    <div class="row">
    <div class="col-6 ">
        <dl class="row">
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
       
            <dt class = "col-sm-4">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-8">
                @Html.DisplayFor(model => model.Description)
            </dd>
        
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-4">Category Name               
                @* @Html.DisplayNameFor(model => model.CategoryName) *@
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
            <dt class="col-sm-4">Sub Category Name
                @* @Html.DisplayNameFor(model => model.SubCategory.Name) *@
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SubCategory.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Brand.BrandName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Brand.BrandName)
            </dd>
        </dl>
    </div>
    <div class="col-6 ">
        <img src="@imgsrc" height="100%" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
    </div>
    </div>
    <br />
    <br/>
    <div class="row">
        <div class="col-6">
          <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col">
                  <input type="submit" value="Delete" class="btn btn-danger w-100" /> 
                </div>
         
                <div class="col">
                  <a asp-action="Index" class="btn btn-success form-control w-100">Back to List</a>
                 </div>
            </div>


          </form>
        </div>
        <div class="col-6">
        </div>
    </div>
</div>
</div>
</div>