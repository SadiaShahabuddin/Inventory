@model Inventory.Models.Product

@{
    ViewData["Title"] = "Create";
    List<Brand> brands = (List<Brand>)ViewBag.BrandId;
    List<SubCategory> subcategory = (List<SubCategory>)ViewBag.SubCategoryId;
    List<Category> category = (List<Category>)ViewBag.CategoryId;
}
<div class="card card-default color-palette-box">
    <div class="card-body">
        <h2 class="text-primary">Create Product</h2>

<div class="row">
    <div class="col-md-6" >
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label><br />
                <input name="Image" type="file" id="fileUpload" accept="image/*">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="category">Category</label>
                <select name="CategoryId" id="CategoryId" class="form-control">
                    <option disabled selected>--Please Select Category--</option>
                    @foreach (var item in category)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SubCategory" class="control-label"></label>
                <select name="SubCategoryId" id="SubCategoryId" class="form-control">
                   <option disabled selected>--Please Select SubCategory--</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <select name="BrandId" class="form-control">
                    @foreach (var item in brands)
                    {
                        <option value="@item.Id">@item.BrandName</option>
                    }
                </select>
            </div>
            <div class="row">
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
                <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control w-100"><i class="fas fa-sign-out-alt"></i>&nbsp; Back to List</a>
                </div>
             </div>
        </form>

    </div>
</div>
</div>

    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $("#CategoryId").change(function () {
            var categoryId = $(this).val();

            $.ajax({
                type: "GET",
                url: "/Products/GetSubcategories",
                data: { categoryId: categoryId },
                success: function (data) {
                    console.log(data);
                    var subcategoryDropdown = $("#SubCategoryId");
                    subcategoryDropdown.empty(); // Clear existing options
                    // $.each(data, function (index, subcategory) {
                    //  subcategoryDropdown.append(
                    //        $('<option></option>').val(subcategory.id).text(subcategory.name)
                    //      );
                    // });
                    for (let index = 0; index < data.length; index++) {
                        const subcategory = data[index];
                        subcategoryDropdown.append(
                            $('<option></option>').val(subcategory.id).text(subcategory.name)
                        );
                    }
                    
                   
                },
                error: function (error) {
                    console.error("Error loading subcategories: " + error);
                }
            });
        });
    </script>
}
