@model Inventory.Models.SalesOrder
@{
    ViewData["Title"] = "Index";

}


<div class="card card-default color-palette-box">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Sales Order List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp;  Create New Sales Order</a>
            </div>
        </div>
        <br />
        <br />
        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Order No</th>
                    <th>Branch</th>
                    <th>Customer</th>
                    <th>Order Date</th>
                    <th>Delivery Date</th>
                    <th>Currency</th>
                    <th>Sales Type</th>
                    <th>Invoice</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/salesOrders.js"></script>
}
