@model Inventory.Models.Customer
@{
    var title = "Create Customer";
}
<div class="card card-default color-palette-box">
    <div class="card-body">
        <form method="post" asp-action="Upsert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.CustomerId != 0)
            {
                <input type="hidden" asp-for="CustomerId" />
                title = "Edit Customer";
            }
            <div class="col-12">
                <h2 class="text-primary">@title</h2>
                <br />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CustomerName" class="control-label"></label>
                        <input asp-for="CustomerName" class="form-control"/>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CustomerTypeId" class="control-label"></label>
                        <select name="CustomerTypeId" id="CustomerTypeId" class="form-control">
                            <option value="">--Select Customer Type--</option>
                        </select>
                        <span asp-validation-for="CustomerTypeId" class="text-danger"></span>
                    </div>
                </div>
             </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="State" class="control-label"></label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ZipCode" class="control-label"></label>
                        <input asp-for="ZipCode" class="form-control" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ContactPerson" class="control-label"></label>
                    <input asp-for="ContactPerson" class="form-control" />
                    <span asp-validation-for="ContactPerson" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    @if (Model.CustomerId != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.CustomerId" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>

        </form>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            loadCustomerType();
        });

        function loadCustomerType() {
            $.ajax({
                url: "/CustomerTypes/GetAll",
                type: "GET",
                dataType: "json",
                success: function (data) {
                    // Log the response data to the console
                    console.log(data.data);

                    // Get a reference to the select element
                    var selectElement = $("#CustomerTypeId");

                    // Clear existing options
                    selectElement.empty();

                    // Add a default "Select Customer Type" option
                    selectElement.append('<option value="">Select Customer Type</option>');

                    // Loop through the data and append options
                    $.each(data.data, function (index, item) {
                        selectElement.append('<option value="' + item.customerTypeId + '">' + item.customerTypeName + '</option>');
                    });
                },
                error: function (xhr, status, error) {
                    // Handle any errors here
                    console.error("Error: " + error);
                }
            });
        }
    </script>
}
