                    }
                },
                error: function (error) {
                    console.error("Error loading purchase orders: " + error);
                }
            });
        }

        $(document).ready(function () {
            // Denotes total number of rows
            var rowIdx = 1;

            // jQuery button click event to add a row
            $('#addBtn').on('click', function () {
                // Adding a row inside the tbody with form fields.
                $('#tbody').append(`
                                            <tr id="R${++rowIdx}">
                                                <td class="row-index text-center">
                                                    <p>${rowIdx}</p>
                                                </td>
                                                <td>
                                                    <select name="PurchaseOrderLines[${rowIdx}].PurchaseOrderId" class="form-control">
                                                        <option disabled selected>--Please Select Purchase Order Id--</option>
                                                    </select>
                                                </td>
                                                <td>
                                                    <select name="PurchaseOrderLines[${rowIdx}].ProductId" class="form-control">
                                                        <option disabled selected>--Please Select Product Id--</option>
                                                    </select>
                                                </td>
